<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="name"/></h1>
    </header>
    <div>
        <table>
            <tr>
                <th>{{localize "mnm3e.weapon.category"}}</th>
                <th>{{localize "mnm3e.weapon.effect"}}</th>
                <th>{{localize "mnm3e.weapon.critical"}}</th>
                <th>{{localize "mnm3e.weapon.cost"}}</th>
            </tr>
            <tr>
                <td>
                    <select name="data.category">
                        {{#select data.category}}
                        {{#each config.weaponCategories as |name category|}}
                        <option value="{{category}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td><input name="data.effect" type="text" value="{{data.effect}}" data-dtype="String"/></td>
                <td><input name="data.critical" type="text" value="{{data.critical}}" data-dtype="Number"/></td>
                <td><input name="data.cost" type="text" value="{{data.cost}}" data-dtype="Number"/></td>
            </tr>
        </table>
        <div>
        {{editor content=data.description target="data.description" button=true owner=owner 
        editable=editable}}
        </div>
    </div>
</form>